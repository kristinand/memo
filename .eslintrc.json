{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["plugin:react/recommended", "airbnb"],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": ["react"],
  "rules": {
    "linebreak-style": ["error", "windows"],
    "object-curly-newline": ["error", { "ImportDeclaration": "never" }],
    "max-len": ["error", { "code": 120, "tabWidth": 2 }],
    "no-plusplus": ["error", { "allowForLoopAfterthoughts": true }]
  }
}
